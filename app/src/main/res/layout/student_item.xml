<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Enrollment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:text="44"
        android:textColor="@color/colorTextBlack"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/StudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="55dp"
        android:layout_toEndOf="@+id/Enrollment"
        android:layout_toRightOf="@+id/Enrollment"
        android:text="Student Name"
        android:textColor="@color/colorTextBlack"
        android:textSize="14dp" />

    <CheckBox
        android:id="@+id/P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_toEndOf="@+id/StudentName"
        android:layout_toRightOf="@+id/StudentName"
        android:buttonTint="@color/colorPresent"
        android:text="P" />

    <CheckBox
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toEndOf="@+id/P"
        android:layout_toRightOf="@+id/StudentName"
        android:buttonTint="@color/colorAbsent"
        android:text="A" />


</RelativeLayout>